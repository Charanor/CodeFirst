        </xs:annotation>
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute type="KeyboardButton" name="Button" use="required"/>
                <xs:attribute type="ModifierKey" name="Modifier" use="optional"/>
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>

